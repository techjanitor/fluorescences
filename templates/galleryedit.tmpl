{{ template "base" .}}
<div class="admin">
  <form action="/admin/edit/gallery" method="post" enctype="multipart/form-data">
      <input class="form-control" type="hidden" name="id" value="{{.Gallery.ID}}" />
    <div class="form-group">
      <input class="form-control" name="title" placeholder="Title" value="{{.Gallery.Title}}" />
    </div>
    <div class="form-group">
      <textarea placeholder="Description" class="form-control" rows="8" name="desc">{{.Gallery.Desc}}</textarea>
    </div>
    <div class="form-group">
      <button class="button button-default form-control" type="submit" value="Submit">Submit</button>
    </div>
  </form>
</div>
{{ template "footer" .}}
